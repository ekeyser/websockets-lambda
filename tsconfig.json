{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
//    "lib": ["es2020", "dom"]
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules"
  ],
}
